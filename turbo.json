{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalPassThroughEnv": [
    "VERCEL_URL",
    "NODE_ENV",
    "CI",
    "SKIP_ENV_VALIDATION",
    "PORT",
    "DATABASE_URL",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "UPLOADTHING_TOKEN",
    "EMAIL_DOMAIN",
    "STRIPE_API_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "PLAIN_API_KEY",
    "PLAIN_FEEDBACK_LABEL_BUG",
    "PLAIN_FEEDBACK_LABEL_FEATURE",
    "PLAIN_FEEDBACK_LABEL_GENERAL",
    "PLAIN_FEEDBACK_LABEL_SUPPORT",
    "RESEND_API_KEY",
    "OPENAI_API_KEY",
    "UPLOADTHING_APP_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "outputs": ["*.tsbuildinfo"]
    },
    "start": {
      "dependsOn": ["^build", "build"],
      "cache": false,
      "persistent": true
    }
  }
}
