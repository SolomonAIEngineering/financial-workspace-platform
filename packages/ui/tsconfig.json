{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/components/ui/*": ["./src/components/ui/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2019"],
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
