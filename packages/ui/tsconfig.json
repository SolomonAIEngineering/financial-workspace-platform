{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2019"],
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src", "src/types/*.d.ts"],
  "exclude": ["node_modules"]
}
