{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "paths": {
      "@solomonai/lib/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
