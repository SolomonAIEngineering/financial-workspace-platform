{
  "extends": "tsconfig/base.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true
  }
} 