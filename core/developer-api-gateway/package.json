{
  "name": "@polar-core/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy --minify",
    "dev": "wrangler dev",
    "test": "npm run test:docker:restart && vitest run -c vitest.unit.ts",
    "test:integration": "npm run test:docker:restart && vitest run -c vitest.integration.ts --bail=1",
    "test:benchmark": "vitest run -c vitest.benchmark.ts",
    "test:docker:restart": "docker compose down && docker compose up -d && sleep 2",
    "test:docker:up": "docker compose up -d",
    "test:docker:down": "docker compose down",
    "migrations:create": "bash -c 'touch migrations/$(date +%Y%m%d%H%M%S)_$1.sql'",
    "test:docker:clean": "docker compose down -v && docker compose up -d && sleep 2",
    "build": "wrangler build",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.4.1",
    "@cloudflare/workers-types": "^4.20240603.0",
    "@repo/api": "workspace:^",
    "tsconfig": "workspace:^",
    "@vitest/ui": "^1.6.0",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0",
    "wrangler": "^3.62.0"
  },
  "dependencies": {
    "@axiomhq/js": "1.0.0-rc.2",
    "@hono/zod-openapi": "^0.17.0",
    "@hono/zod-validator": "^0.2.2",
    "@planetscale/database": "^1.16.0",
    "@repo/auditlog": "workspace:^",
    "@repo/cache": "workspace:^",
    "@repo/clickhouse": "workspace:^",
    "@repo/db": "workspace:^",
    "@repo/encryption": "workspace:^",
    "@polar/error": "workspace:^",
    "@repo/hash": "workspace:^",
    "@repo/id": "workspace:^",
    "@repo/keys": "workspace:^",
    "@repo/logs": "workspace:^",
    "@repo/metrics": "workspace:^",
    "@repo/rbac": "workspace:^",
    "@repo/validation": "workspace:^",
    "@repo/worker-logging": "workspace:^",
    "hono": "^4.2.7",
    "superjson": "^2.2.1",
    "zod": "^3.23.5"
  }
}
